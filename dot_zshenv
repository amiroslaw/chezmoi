export TERM_LT_FONT=" -f 'UbuntuMono Nerd Font:size=%d' "
export TERM_LT_RUN=' -n "%s" -e %s'
export BROWSER="qutebrowser"
# export BROWSER="org.qutebrowser.qutebrowser.desktop"
